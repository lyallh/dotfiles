# Launcher mode as demonstrated in userguide
set $mode_launcher LAUNCHER: Chrome - [l]yall, [d]ev, google [m]usic, [f]acebook messenger
mode "$mode_launcher" {
        bindsym m exec google-chrome --app=http://music.google.com --profile-directory="Profile 2"
        bindsym f exec google-chrome --app=http://messenger.com --profile-directory="Profile 2"
        bindsym e exec google-chrome --app=http://evernote.com --profile-directory="Profile 2"
        bindsym d exec google-chrome-beta --profile-directory="Default"
        bindsym l exec google-chrome-beta --profile-directory="Profile 2"
	bindsym c exec ~/proj/VSCode-linux-x64/code-oss
	bindsym x exec xmodmap ~/.Xmodmap
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+o mode "$mode_launcher"

# Shutdown mode
mode  "SHUTDOWN: (s)leep (h)ybernate (p)owersave (r)estart shut(d)own" {

        bindsym s exec sudo pm-suspend; mode "default"
#        bindsym h exec sudo pm-hibernate; mode "default"
        bindsym p exec sudo pm-powersave; mode "default"
        bindsym d exec sudo shutdown -h now; mode "default"
        bindsym r exec sudo shutdown -r now; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+n mode "SHUTDOWN: (s)leep (h)ybernate (p)owersave (r)estart shut(d)own"

# Display output mode
set $mode_output DISPLAY OUTPUT (shift-#: off; alt-#: rot) : (1) DVI-0, (2) DVI-1, (3) HDMI-0, (4) DP-0
mode "$mode_output" {
    # Desktop (keys 1 - 4)
        bindsym 1 exec xrandr --output DVI-I-0 --auto --left-of DP-0 #--output DVI-I-1 --off --output HDMI-0 --off --output DP-0 --off 
        bindsym shift+1 exec xrandr --output DVI-I-0 --off
        bindsym $mod+1 exec xrandr --output DVI-I-0 --rotate left
        bindsym 2 exec xrandr --output DVI-I-1 --auto #--output DVI-I-0 --off --output HDMI-0 --off --output DP-0 --off 
        bindsym shift+2 exec xrandr --output DVI-I-1 --off
        bindsym $mod+2 exec xrandr --output DVI-I-1 --rotate left
        bindsym 3 exec xrandr --output HDMI-0 --auto #--output DVI-I-0 --off --output DVI-I-1 --off --output DP-0 --off 
        bindsym shift+3 exec xrandr --output HDMI-0 --off
        bindsym $mod+3 exec xrandr --output HDMI-0 --rotate left
        bindsym 4 exec xrandr --output DP-0 --auto #--output DVI-I-0 --off --output DVI-I-1 --off --output HDMI-0 --off 
        bindsym shift+4 exec xrandr --output DP-0 --off
        bindsym $mod+4 exec xrandr --output DP-0 --rotate left
        bindsym Return mode "default"
        bindsym Escape mode "default"
    # Zenbook (keys 7 - 0)
        bindsym 7 exec xrandr --output eDP-1 --auto --below DP-1
        bindsym shift+7 exec xrandr --output eDP-1 --off
        bindsym 8 exec xrandr --output DP-1 --auto
        bindsym shift+8 exec xrandr --output DP-1 --off
        bindsym 9 exec xrandr --output HDMI-1 --auto
        bindsym shift+9 exec xrandr --output HDMI-1 --off
        bindsym 0 exec xrandr --output HDMI-2 --auto
        bindsym shift+0 exec xrandr --output HDMI-2 --off

}
bindsym $mod+shift+o mode "$mode_output"

