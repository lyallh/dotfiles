bindsym $mod+shift+x exec i3lock

## STARTUP STUFF

# Monitor setup
#exec xrandr --output DVI-I-0 --off --output DVI-I-1 --off --output HDMI-0 --auto --output DP-0 --off
exec xrandr --output eDP1 --auto --left-of DP2 --output DP1 --off --output DP2 --auto --output HDMI1 --off --output HDMI2 --off #X1

# Monitor setup with screen tearing fix
#exec nvidia-settings --assign CurrentMetaMode="DP-0:3840x2160_60 +1080+0 { ForceFullCompositionPipeline = On }, HDMI-0:1920x1080_60 +0+0 { Rotation=left }"

# Launch gnome-settings-daemon to support loading of
# themes specified in ~/.gtkrc-2.0 and ~/.config/gtk-3.0/settings.ini
#exec --no-startup-id gnome-settings-daemon

# Gnome + i3: Notify gnome session manager that i3 has started correctly
# http://zork.net/~st/jottings/gnome-i3.html
exec --no-startup-id dbus-send \
    --session \
    --print-reply=literal \
    --dest=org.gnome.SessionManager \
    "/org/gnome/SessionManager" \
    org.gnome.SessionManager.RegisterClient \
    "string:i3" \
    "string:$DESKTOP_AUTOSTART_ID"
# Launch network manager applet for gnome-panel
exec --no-startup-id nm-applet --sm-disable

